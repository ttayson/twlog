<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Usuários</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>

        <a href="/admin/adduser">
          <button class="btn btn-info"> Adicionar</button>
        </a>

        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>



<div class="card">
              <div class="card-header">
                <h3 class="card-title">Listagem de Usuários</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">
                
                <table id="usertalbe" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Usuário</th>
                    <th>Empresa</th>
                    <th>TAG</th>
                    <th>Ações</th>
                  </tr>
                  </thead>
                  <tbody>
                      {{#each alluser}}
                  <tr>
                    <td>{{name}}</td>
                    <td>{{login}}</td>

                      {{#each Id_client}}
                      <td>{{name}}</td>
                      {{else}}
                      {{/each}} 

                      {{#each type}}
                      <td><span class="badge bg-warning">{{name}}</span></td>
                      {{else}}
                      {{/each}}
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="window.location='/admin/edituser/{{id}}'">
                          <i class="fas fa-pencil-alt"></i> 
                        </button>

                        <button class="btn btn-danger btn-sm" onclick="deletar('{{id}}')">
                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}">
                          <i class="far fa-trash-alt"></i>  
                        </button>
                      </td>
                    </td>
                  </tr>
                    {{else}}
					{{/each}} 
                  </tbody>
                 </table>

            </div>

</div>


