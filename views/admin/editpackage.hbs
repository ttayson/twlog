<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Editar Pacote</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>

        <a href="/admin/pacotes">
          <button class="btn btn-info"> Voltar </button>
        </a>
        
        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>


<div class="col-md-6" style="display: contents;">
            <!-- general form elements -->
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Editar Pacote</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/admin/editpacote" method="POST">
                <div class="card-body">
                  <input type="hidden" name="id" value="{{package._id}}">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nº do Pacote</label>
                    <input type="text" class="form-control" name="code" placeholder="Código do Pacote" value="{{package.code}}">
                  </div>
                  <div class="form-group">
                      <label for="">Empresa cliente</label>
                      <select class="form-control" name="company">
                        {{#each allcompany}}
                        <option value={{_id}}>{{name}}</option>
                        {{else}}
                        <option>Empresas Não cadastradas</option>
                        {{/each}}
                      </select>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Destinatário</label>
                    <input type="text" class="form-control" name="receiver" placeholder="Destinatário" value="{{package.receiver}}">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">CEP</label>
                    <input type="text" class="form-control" name="cep" placeholder="" value="{{package.cep}}">
                  </div>               
                  <div class="form-group">
                    <label for="exampleInputPassword1">Endereço</label>
                    <input type="text" class="form-control" name="address" placeholder="Endereço" value="{{package.address}}">
                  </div>
                  <div class="row">
                  <div class="form-group" style="padding-inline-end: 20px; width: 500px; padding-left: 6px;">
                    <label for="exampleInputPassword1">Cidade</label>
                    <input type="text" class="form-control" name="city" placeholder="Cnameade" value="{{package.city}}">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Estado</label>
                    <input type="text" class="form-control" name="state" placeholder="Estado" value="{{package.state}}">
                  </div>
                   </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-info">Editar</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
</div>


{{!-- </div> --}}


