</div>



<div class="card">
              <div class="card-header">
                <h3 class="card-title">Listagem de Pacotes Pendentes</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">

                              <div class="row" >
                  <div class="col-lg-2 col-6">
                    <input id="npackage" value="{{value.npackage}}" class="form-control" placeholder="Nº Pacote" type="text">
                  </div>
                    <div class="col-lg-2 col-6">
                      <select id="status_filter" class="form-control">
                        <option selected value="">Filtrar por status</option>
                        <option value="Pendente">Pendente</option>
                        <option value="Em lote">Em lote</option>
                        <option value="Em rota">Em rota</option>
                        <option value="Falha na Entrega">Falha na Entrega</option>
                        <option value="Fora do sistema">Fora do sistema</option>
                        <option value="Entregue">Entregue</option>
                      </select>
                  </div>
                  <div class="col-lg-2 col-6">
                    {{#if value}}
                    <input class="form-control" type="date" value="{{value.datein}}" id="datein">
                    {{else}}
                    <input class="form-control" type="date" value="{{date}}" id="datein">
                    {{/if}}
                  </div>
                  <div class="col-lg-2 col-6">
                    {{#if value}}
                    <input class="form-control" type="date" value="{{value.dateout}}" id="dateout">
                    {{else}}
                    <input class="form-control" type="date" value="{{date}}" id="dateout">
                    {{/if}}                  
                  </div>
                  <div class="col-lg-2 col-6">
                    <button class="btn btn-info" onclick="filter()">Filtrar</button>                  
                  </div>
                  </div>
                  <br>
                
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Nº Pacote</th>
                    <th>Tipo</th>
                    <th>Destinatário</th>
                    <th>Endereço</th>
                    <th>Bairro</th>
                    <th>CEP</th>
                    <th>Estado</th>
                    <th>Status</th>
                    <th>Ações</th>
                  </tr>
                  </thead>
                  <tbody>
                      {{#each allpackages}}
                  <tr>
                    <td>{{code}}</td>
                    {{#each Id_type}}
                    <td>{{type}}</td>
                    {{else}}
                    <td>S/ Cadastro</td>
				          	{{/each}} 
                    <td>{{receiver}}</td>
                    <td>{{address}}</td>
                    <td>{{district}}</td>
                    <td>{{cep}}</td>
                    <td>{{state}}</td>
                    <td>{{statusColor status}}</td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="window.location='/admin/editpacote/{{id}}'">
                          <i class="fas fa-pencil-alt"></i> 
                           
                        </button>

                        <button class="btn btn-danger btn-sm" onclick="deletar('{{id}}')">
                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}">
                          <i class="far fa-trash-alt"></i>
                           
                        </button>
                      </td>
                    </td>
                  </tr>
                    {{else}}
				          	{{/each}} 
                  </tbody>
                 </table>

            </div>

</div>


