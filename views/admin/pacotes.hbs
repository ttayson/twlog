<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Informações de Pacotes</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#importmodal"> Importar Pacotes </button>
        
        <a href="/admin/addpacote">
          <button class="btn btn-info"> Adicionar</button>
        </a>
        
            <div class="modal fade" id="importmodal" tabindex="-1" role="dialog" aria-labelledby="importmodalTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Importar Pacotes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/admin/importpackage" enctype="multipart/form-data" method="post" style="align-items: flex-end;">
                        <input  type="file" name="file" required="required">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
			        </form>  
                </div>

                </div>
            </div>
            </div>

        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>



<div class="card">
              <div class="card-header">
                <h3 class="card-title">Listagem de Pacotes Pendentes</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">
                
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Nº Pacote</th>
                    <th>Destinatário</th>
                    <th>Endereço</th>
                    <th>Status</th>
                    <th>Ações</th>
                  </tr>
                  </thead>
                  <tbody>
                      {{#each allpackage}}
                  <tr>
                    <td>{{code}}</td>
                    <td>{{receiver}}</td>
                    <td>{{address}}</td>
                    <td><span class="badge bg-warning">{{status}}</span></td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="#">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                          <a class="btn btn-info btn-sm" href="#">
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                          <a class="btn btn-danger btn-sm" href="#">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                    </td>
                  </tr>
                    {{else}}
					{{/each}} 
                  </tbody>
                 </table>

            </div>

</div>



