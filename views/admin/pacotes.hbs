<script>
function filter(){

    const datein = document.getElementById("datein").value
    const dateout = document.getElementById("dateout").value
    const npackage = document.getElementById("npackage").value
    const status_filter = document.getElementById("status_filter").value


  window.location='/admin/pacotes?datein='+datein+"&dateout="+dateout+"&npackage="+npackage+"&status_filter="+status_filter
}  
function modal(img){
  $('#img').attr('src',img);
  $('#modelcomp').modal('show');
}  

function deletar(id) {
                Swal.fire({
                  title: 'Deseja deletar?',
                  text: "",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'Sim'
                }).then((result) => {
                  if (result.value) {
                    var form = $('#typedel-'+id);
                    $.ajax({
                      url:'/admin/delpackage',
                      method:'POST',
                      data: $(form).serialize()
                    })
                    .done(async function(retorno){

                    if (retorno.ok == "deletok"){

                        await Swal.fire({
                          position: 'top-end',
                          icon: 'success',
                          title: 'Deletado',
                          showConfirmButton: false,
                          timer: 1500
                        })

                        location.reload();

                      }else if (retorno.ok == "accessdenied"){

                          await Swal.fire('Acesso Bloqueado', '', 'error')

                        location.reload();

                      }
                  })
                  }  
                })
            }


</script>



