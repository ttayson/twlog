<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Informações de Lotes</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        
        <a href="/admin/addlote">
          <button class="btn btn-info"> Adicionar</button>
        </a>


        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>



<div class="card">
              <div class="card-header">
                <h3 class="card-title">Listagem de Lotes</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">
                
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>ID Lote</th>
                    <th>Entregador</th>
                    <th>Status</th>
                    <th>Acções</th>
                  </tr>
                  </thead>
                  <tbody>
                      {{#each allbatchs}}

                          <div class="modal fade" id="modelqrcode" tabindex="-1" role="dialog" aria-labelledby="modelqrcodeLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="modelqrcodeLabel">Vincular Entregador</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body" style="align-self: center;">
                                  <img src="/admin/qrcode/{{id}}" width="300">
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                              </div>
                            </div>
                          </div>
                  <tr>
                    <td>{{_id}}</td>
                    {{#each Id_deliveryman}}
                    <td>{{name}}</td>
                    {{else}}
                    <td>Não definido</td>
                    {{/each}} 
                    <td><span class="badge bg-warning">{{status}}</span></td>
                    <td>
                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modelqrcode">

                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}" >
                          <i class="fas fa-pencil-alt"></i> 
                          View 
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="deletar('{{id}}')" >
                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}">
                          <i class="fas fa-pencil-alt"></i> 
                          Deletar 
                        </button>
                      </td>
                    </td>
                  </tr>
                    {{else}}
				          	{{/each}} 
                  </tbody>
                 </table>

            </div>





            

</div>


<script>

function deletar(id) {
                Swal.fire({
                  title: 'Deseja deletar?',
                  text: "",
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'Sim'
                }).then((result) => {
                  if (result.value) {
                    var form = $('#typedel-'+id);
                    $.ajax({
                      url:'/admin/dellote',
                      method:'POST',
                      data: $(form).serialize()
                    })
                    .done(function(retorno){

                        if (retorno.ok == "deletok"){
              msg()
              async function msg(){

              await Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Deletado',
                showConfirmButton: false,
                timer: 1500
              })

              location.reload();

              }

                      }
                  })
                  }  
                })
            }
</script>