<script>
  $(function () {
    $("#example1").DataTable({"lengthMenu": [[10, 50, 100, 500, 1000], [10, 50, 100, 500, 1000]],
      "searching": true, "responsive": true, "lengthChange": true, "bInfo" : false, "autoWidth": true,
      "buttons": ["excel", "pdf", "print"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
  });
</script>

<script>
function filter(){

    const datein = document.getElementById("datein").value
    const dateout = document.getElementById("dateout").value
    const npackage = document.getElementById("npackage").value
    const status_filter = document.getElementById("status_filter").value


  window.location='/admin/entregas?datein='+datein+"&dateout="+dateout+"&npackage="+npackage+"&status_filter="+status_filter
}  
function modal(img, img2){
  if (!img){
    $('#img').attr('src',img2);
    $('#modelcomp').modal('show');
  }else{
    $('#img').attr('src',img);
    $('#modelcomp').modal('show');
  }
}  

</script>



