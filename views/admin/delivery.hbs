<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Entregas</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>
        
        <a href="/admin">
          <button class="btn btn-info"> Voltar</button>
        </a>


        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>



<div class="card">
  

              <div class="card-header">
                <h3 class="card-title">Listagem de entregas</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">

                <div class="row" >
                  <div class="col-lg-2 col-6">
                    <input id="npackage" value="{{value.npackage}}" class="form-control" placeholder="Nº Pacote" type="text">
                  </div>
                    <div class="col-lg-2 col-6">
                      <select id="status_filter" class="form-control">
                        <option selected value="">Filtrar por status</option>
                        <option value="Entregue">Entregue</option>
                        <option value="Falha na Entrega">Falha na Entrega</option>
                        <option value="Fora do sistema">Fora do sistema</option>
                      </select>
                  </div>
                  <div class="col-lg-2 col-6">
                    {{#if value}}
                    <input class="form-control" type="date" value="{{value.datein}}" id="datein">
                    {{else}}
                    <input class="form-control" type="date" value="{{date}}" id="datein">
                    {{/if}}
                  </div>
                  <div class="col-lg-2 col-6">
                    {{#if value}}
                    <input class="form-control" type="date" value="{{value.dateout}}" id="dateout">
                    {{else}}
                    <input class="form-control" type="date" value="{{date}}" id="dateout">
                    {{/if}}                  
                  </div>
                  <div class="col-lg-2 col-6">
                    <button class="btn btn-info" onclick="filter()">Filtrar</button>                  
                  </div>
                  </div>
                  <br>



                        <div class="modal fade" id="modelcomp" tabindex="-1" role="dialog" aria-labelledby="modelcompLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="modelcompLabel">Comprovante </h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body" style="align-self: center;">
                                  <img id="img" src="" width="300">
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                              </div>
                            </div>
                          </div>
                
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Código</th>
                    <th>Entregador</th>
                    <th>Motivo</th>
                    <th>Data</th>
                    <th>Hora</th>
                    <th>Status</th>
                    <th>Ação</th>
                  </tr>
                  </thead>
                  <tbody>

                      {{#each alldelivery}}

                  <tr>
                    <td>{{barcode}}</td>
                    {{#each Id_deliveryman}}
                    <td>{{name}}</td>
                    {{else}}
                    {{/each}}
                    <td>{{reason}} {{reason_description}}</td>
                    <td>{{dateDelivery delivery_date}}</td>
                    <td>{{timeDelivery delivery_date}}</td>
                    <td>{{statusColor status}}</td>
                    <td>
                      <button class="btn btn-info btn-sm" data-toggle="modal" onclick="modal('{{img_received}}','{{img_package}}');" >
                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}" >
                          <i class="far fa-eye"></i> 
                          
                      </button>
                      <button class="btn btn-danger btn-sm" data-toggle="modal"target="_blank" onclick="window.open('http://maps.google.com/maps?q={{location}}&ll={{location}}&z=17')"  >
                          <input type="hidden" value="New Tab"  >
                          <i class="fas fa-map-marker-alt"></i> 
                           
                      </button>

                      </td>
                    </td>
                  </tr>
                    {{else}}
					{{/each}} 
                  </tbody>
                 </table>

            </div>

</div>


