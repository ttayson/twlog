{{#each erros}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.1/css/select.dataTables.min.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Criar Lote</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>

        <a href="/admin/lotes">
          <button class="btn btn-info"> Voltar </button>
        </a>
        
        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>


<div class="col-md-6" style="display: contents;">
            <!-- general form elements -->
        <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Novo Lote</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
          <form id="frm-example">
                <div class="card-body">
                   <div class="form-group">
                      <label for="">Selecionar Entregador</label>
                      <select class="form-control" id="deliveryman">
                        <option>Não Selecionado</option>
                        {{#each alldeliveryman}}
                        <option value={{_id}}>{{name}}</option>
                        {{else}}
                        <option>Entregador não cadastrado</option>
                        {{/each}}
                      </select>
                  </div>

                    <br>
                    <table id="example" class="display" >
                            <thead>
                                <tr>
                                    <th><input name="select_all" value="1" type="checkbox"></th>
                                    <th>ID</th>
                                    <th>Nº do Pacote</th>
                                    <th>Destinatário</th>
                                    <th>Endereço</th>

                                </tr>
                            </thead>
                            <tbody>
                              {{#each allpackage}}
                                <tr>
                                    <td></td>
                                    <td>{{_id}}</td>
                                    <td>{{code}}</td>
                                    <td>{{receiver}}</td>
                                    <td>{{address}}</td>
                                </tr>

                                {{else}}
                                {{/each}} 
                            </tbody>
                    </table>

                  <button type="reset" id="kkkk" class="btn btn-info">Adicionar</button>

                </div>

          </form>

          </div>
</div>
           


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js"></script>

<script>
$(document).ready(function() {
   var table = $('#example').DataTable({
      "ordering": false,
      "info":     false,     
      'columnDefs': [
         {
            'targets': 0,
            'checkboxes': {
               'selectRow': true
            }
         }
      ],
      'select': {
         'style': 'os'
      },
      'order': [[1, 'asc']]
   });	
   
   
   $('#kkkk').on('click', function(e){
   var form = this;
   var rows_selected = table.rows('.selected').data();
   var selected_items = [];

    $.each(rows_selected, function(index, rowId){

      selected_items.push({id:rowId[1]});
      
    });   
    value = $("#deliveryman").val();
    selected_items.push({deliveryman:value});
 
        if (selected_items.length == 0){
          Swal.fire('Selecione Pacotes', '', 'info')
        } else {
              Swal.fire({
								title: 'Criar lote',
								showDenyButton: true,
								showCancelButton: true,
								confirmButtonText: `Sim`,
								denyButtonText: `Não`,
							}).then((result) => {
									if (result.isConfirmed) {
											$.ajax({
												url:'/admin/addlote',
												method:'POST',
												contentType: 'application/json',
												dataType: 'json',
												data: JSON.stringify(selected_items, "teste")
											}).done(function(retorno){
												if (retorno.info == 1){
													Swal.fire('Eleição Iniciada!', '', 'success')
												}
											})
									
									} else if (result.isDenied) {
										Swal.fire('Eleição Não Iniciada', '', 'info')
									}
							})

        }

    console.log(selected_items)
}); 
});	
</script>