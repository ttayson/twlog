<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Empresas</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <br>

        <a href="/admin/addempresa">
          <button class="btn btn-info"> Adicionar</button>
        </a>

        <br>
        <br>
    </div><!-- /.container-fluid -->
</div>



<div class="card">
              <div class="card-header">
                <h3 class="card-title">Listagem de Empresas</h3>
              </div>
              <!-- /.card-header -->
            <div class="card-body">
                
                <table id="usertalbe" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Cidade</th>
                    <th>Ações</th>
                  </tr>
                  </thead>
                  <tbody>
                      {{#each allpcompany}}
                  <tr>
                    <td>{{name}}</td>
                    <td>{{cnpj}}</td>
                    <td>{{city}}</td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="window.location='/admin/editempresa/{{id}}'">
                          <i class="fas fa-pencil-alt"></i> 
                          Editar 
                        </button>

                        <button class="btn btn-danger btn-sm" onclick="deletar('{{id}}')">
                          <input type="hidden" id="typedel-{{id}}" name="id" value="{{id}}">
                          <i class="fas fa-pencil-alt"></i> 
                          Deletar 
                        </button>
                      </td>
                    </td>
                  </tr>
                    {{else}}
				          	{{/each}} 
                  </tbody>
                 </table>

            </div>

</div>


